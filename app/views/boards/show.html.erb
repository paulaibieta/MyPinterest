<div class="container">
  <div class="demo-card">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title"><%= @board.name %></h4>
        <p class="card-text"><%= @board.subtitle %></p>
      </div>  
      <div class="card-block">  
        <% if current_user == @board.user %>
          <%= link_to "edit board", edit_board_path(@board), class: "btn btn-success" %>
          <%= link_to "delete board", board_path(@board), class: "btn btn-info", method: :delete, data: { confirm: 'Are you sure? '} %>
        <% end %>
        <%= link_to "see all boards", boards_path, class: "btn btn-primary" %>
      </div>  
    </div>
  </div>
</div>  
