<div class="container">
  <div class="card-columns">
    <% @pins.each do |pin| %>
      <div class="card">
        <%= image_tag pin.image.url(:index), class: "card-img-top" %> 
          <div class="card-block">
            <h4 class="card-title"><%= pin.title %></h4>
            <p class="card-text"><%= pin.description %></p>
            <%= link_to "see pin", pin_path(pin), class: "btn btn-info" %>
          </div>
      </div> 
    <% end %>
  </div>
</div>          
       
  